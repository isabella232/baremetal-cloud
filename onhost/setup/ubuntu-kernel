#!/bin/bash

# install boot loaders
spawn_chroot "DEBIAN_FRONTEND=noninteractive apt-get -y install extlinux grub-efi-amd64"

# fetch and install kernel via ubuntu ppa
mkdir -p /mnt/baremetal/root/kernel-4.9.234
cd /mnt/baremetal/root/kernel-4.9.234

wget https://kernel.ubuntu.com/~kernel-ppa/mainline/v4.9.234/amd64/linux-headers-4.9.234-0409234-generic_4.9.234-0409234.202008261101_amd64.deb
wget https://kernel.ubuntu.com/~kernel-ppa/mainline/v4.9.234/amd64/linux-headers-4.9.234-0409234_4.9.234-0409234.202008261101_all.deb
wget https://kernel.ubuntu.com/~kernel-ppa/mainline/v4.9.234/amd64/linux-image-4.9.234-0409234-generic_4.9.234-0409234.202008261101_amd64.deb
spawn_chroot "dpkg -i /root/kernel-4.9.234/*.deb"
