#!/bin/bash

ONHOST="$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." && pwd )"
. ${ONHOST}/disklayout/boot

part ${BOOT_DEVICES[0]} 1 8300
format ${BOOT_DEVICES[0]} 1 ext4
mountfs ${BOOT_DEVICES[0]} 1 ext4 /

part ${NVME_DEVICES[0]} 1 fb01 370G aerospike1
part ${NVME_DEVICES[0]} 2 fb01 370G aerospike2
part ${NVME_DEVICES[0]} 3 fb01 370G aerospike3
part ${NVME_DEVICES[0]} 4 fb01 370G aerospike4